# ==========================
# APPLICATION
# ==========================
APP_NAME=Causal Discovery API
APP_VERSION=1.1.0
DEBUG=false

# ==========================
# SERVER
# ==========================
HOST=0.0.0.0
PORT=8000
RELOAD=false

# ==========================
# CORS
# ==========================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ==========================
# LLM SERVICE
# ==========================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ==========================
# DATABASES
# ==========================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=causalpass123
NEO4J_ENABLED=false

SURREALDB_URL=ws://localhost:8001
SURREALDB_NAMESPACE=causal
SURREALDB_DATABASE=knowledge
SURREALDB_USER=root
SURREALDB_PASSWORD=root
SURREALDB_ENABLED=true

# ==========================
# DATA MANAGEMENT
# ==========================
DATA_DIR=data
CACHE_DIR=data/cache
MAX_CACHE_SIZE_MB=10000
CACHE_TTL_DAYS=30

# ==========================
# INVESTIGATION AGENT
# ==========================
INVESTIGATION_TIMEOUT=300
MAX_PAPERS_PER_QUERY=20
ENABLE_WEB_SCRAPING=true

# ==========================
# CAUSAL DISCOVERY
# ==========================
TIGRAMITE_ENABLED=true
DEFAULT_ALPHA_LEVEL=0.05
DEFAULT_MAX_LAG=7
PCMCI_MAX_CONDS_DIM=3

# ==========================
# API RATE LIMITING
# ==========================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ==========================
# LOGGING
# ==========================
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/api.log

# ==========================
# SECURITY
# ==========================
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================
# EXTERNAL SERVICES
# ==========================
# COPERNICUS_USER=your-username
# COPERNICUS_PASSWORD=your-password
# ERA5_API_KEY=your-api-key
